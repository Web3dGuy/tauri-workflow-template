{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "network",
  "description": "Network access permissions for HTTP requests",
  "windows": ["main"],
  "permissions": [
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://*" },
        { "url": "http://localhost:*" },
        { "url": "http://127.0.0.1:*" }
      ],
      "deny": []
    }
  ],
  "platforms": ["windows", "macOS", "linux"]
}